pipeline {
    agent any
    environment {
        AWS_CREDS = credentials('aws-creds')   // your Jenkins stored AWS creds
    }
    stages {
        stage('Checkout Code') {
            steps {
                sh 'terraform init -reconfigure'
                git branch: 'main',
                    url: 'https://github.com/JigarMalam/CapstoneProjectG4Slab.AI.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('infra') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('infra') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('infra') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
}
